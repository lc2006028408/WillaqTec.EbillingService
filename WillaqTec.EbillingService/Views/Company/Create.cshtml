@model WillaqTec.Models.Company

@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo Registro</h1>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Company" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdentityDocumentNumber" class="control-label">RUC :</label>
                <input asp-for="IdentityDocumentNumber" class="form-control" />
                <span asp-validation-for="IdentityDocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessName" class="control-label">Razon Social :</label>
                <input asp-for="BusinessName" class="form-control" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Direccion :</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
